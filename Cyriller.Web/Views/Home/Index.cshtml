        <div class="col-lg-8">
            <input type="text" name="w" class="form-control" required="required" placeholder="Введите существительное в именительном падеже" value="компьютер" />
        </div>
        <div class="col-lg-2">
            <button class="btn btn-primary" type="submit">Склонять</button>
        </div>
    </form>
    <form action="@Url.Content("~/Decline/Adjective")" method="get" class="form-horizontal decline-form">
        <label class="col-lg-2 control-label">Прилагательное:</label>
        <div class="col-lg-8">
            <input type="text" name="w" class="form-control" required="required" placeholder="Введите прилагательное в именительном падеже" value="качественный" />
        </div>
        <div class="col-lg-2">
            <button class="btn btn-primary" type="submit">Склонять</button>
        </div>
    </form>
    <form action="@Url.Content("~/Decline/Phrase")" method="get" class="form-horizontal decline-form">
        <label class="col-lg-2 control-label">Целую фразу:</label>
        <div class="col-lg-8">
            <input type="text" name="w" class="form-control" required="required" placeholder="Введите фразу в именительном падеже" value="красивая фраза" />
        </div>
        <div class="col-lg-2">
            <button class="btn btn-primary" type="submit">Склонять</button>
        </div>
    </form>
    <form action="@Url.Content("~/Decline/Number")" method="get" class="form-horizontal decline-form">
        <input type="hidden" name="a" value="Item" />
        <label class="col-lg-2 control-label">Сумма прописью:</label>
        <div class="col-lg-4">
            <input type="number" name="w" class="form-control" required="required" placeholder="Введите число" value="1024" />
        </div>
        <div class="col-lg-4">
            <input type="text" name="i" class="form-control" required="required" placeholder="Введите единицу измерения" value="байт" />
        </div>
        <div class="col-lg-2">
            <button class="btn btn-primary" type="submit">Склонять</button>
        </div>
    </form>
</fieldset>
